<% include ../header_min %>
<!-- 配置文件 -->
<script type="text/javascript" src="/ueditor/ueditor.config.js"></script>
<!-- 编辑器源码文件 -->
<script type="text/javascript" src="/ueditor/ueditor.all.min.js"></script>

<div class="container">
    <form action="/admin/updateArticle" method="post" enctype="multipart/form-data">
        <ul>
            <li>
                <input type="hidden" name="_id" value="<%= data._id %>">
                <div class="input-group myinput">
                    <span class="input-group-addon" id="basic-addon1">文章分类</span>
                    <div class="form-control">
                        <select class="s-addUser" name="categoryId">
                            <% datalist.forEach(function(val){ %>
                                <option <%- val._id.equals(data.categoryId._id)?'selected':'' %> value="<%= val._id %>"><%= val.name %></option>
                            <% }) %>
                        </select>
                    </div>
                </div>
                <div class="input-group myinput">
                    <span class="input-group-addon" id="basic-addon1">文章标题</span>
                    <input type="text" class="form-control" aria-describedby="basic-addon1" name="title" value="<%= data.title %>">
                </div>
                <div class="input-group myinput">
                    <span class="input-group-addon" id="basic-addon1">文章作者</span>
                    <input type="text" class="form-control" aria-describedby="basic-addon1" name="author" value="<%= data.author %>">
                </div>
                <div class="input-group myinput">
                    <span class="input-group-addon" id="basic-addon1">文章封面</span>
                    <input id="file" type="file" class="form-control" aria-describedby="basic-addon1" name="newcover" value="<%= data.cover %>">
                    <input type="hidden" name="cover" value="<%= data.cover %>">
                </div>
            </li>
            <li>
                <textarea id="mycontent" style="width: 100%; height: 300px;" name="content"><%= data.content %></textarea>
            </li>
            <li>
                <input class="btn" type="submit" value="发布文章">
            </li>
        </ul>
    </form>
</div>
<script type="text/javascript">
    var ue = UE.getEditor('mycontent');
</script>

<% include ../footer_min %>