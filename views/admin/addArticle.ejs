<% include ../header_min %>
<!-- 配置文件 -->
<script type="text/javascript" src="/ueditor/ueditor.config.js"></script>
<!-- 编辑器源码文件 -->
<script type="text/javascript" src="/ueditor/ueditor.all.min.js"></script>

<div class="container">
	<form action="/admin/insertArticle" method="post" enctype="multipart/form-data">
		<ul>
			<li>
				<div class="input-group myinput">
				  	<span class="input-group-addon" id="basic-addon1">文章分类</span>
				  	<div class="form-control">
				  		<select class="s-addUser" name="categoryId">
				  			<% datalist.forEach(function(val){ %>
					  			<option value="<%= val._id %>"><%= val.name %></option>
				  			<% }) %>
				  		</select>
				  	</div>	
				</div> 		  
				<div class="input-group myinput">
				  <span class="input-group-addon" id="basic-addon1">文章标题</span>
				  <input type="text" class="form-control" aria-describedby="basic-addon1" name="title">
				</div>
				<div class="input-group myinput">
				  <span class="input-group-addon" id="basic-addon1">文章作者</span>
				  <input type="text" class="form-control" aria-describedby="basic-addon1" name="author">
				</div>
				<div class="input-group myinput">
				  <span class="input-group-addon" id="basic-addon1">文章封面</span>
				  <input type="file" class="form-control" aria-describedby="basic-addon1" name="cover">
				</div>												
			</li>
			<li>
				<textarea id="mycontent" style="width: 100%; height: 300px;" name="content"></textarea>
			</li>
			<li>
				<input class="btn" type="submit" value="发布文章">
			</li>
		</ul>
	</form>
</div>
<script type="text/javascript">
    var ue = UE.getEditor('mycontent');
</script>

<% include ../footer_min %>